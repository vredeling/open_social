{{ attach_library('social_post_album/social-post-album--post') }}

{# @see field--field-post-image.html.twig #}
<div class="social-post-album--post-gallery" itemscope itemtype="http://schema.org/ImageGallery"
     data-item-class="photoswipe-gallery-item">
  {% for index, item in items %}
    <div class="post-with-image">
      <a href="{{ path('social_post_album.image_popup_render_original', {'post': pid, 'first_fid': item.content['#item'].entity.fid.value}) }}"
         class="use-ajax"
         data-dialog-type="modal"
         data-dialog-options='{"width":"100%"}'>
        {{ item.content }}
      </a>
    </div>
  {% endfor %}
</div>
